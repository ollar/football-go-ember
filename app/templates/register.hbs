<div class="register-page">
  <h1>
    {{t 'register.title'}}
  </h1>

  <form
    class="register-form pure-form pure-form-aligned"
    {{action "register" on="submit"}}
  >
    <div class="pure-control-group">
      <label for="name">{{t 'form.labels.name'}}</label>
      {{input
        id="name"
        name="name"
        type="text"
        placeholder=(t 'form.labels.name')
        value=name
      }}
    </div>

    <div class="pure-control-group">
      <label for="email">{{t 'form.labels.email'}}</label>
      {{input
        id="email"
        name="email"
        type="email"
        placeholder=(t 'form.labels.email')
        value=email
      }}
    </div>

    <div class="pure-control-group">
      <label for="password">{{t 'form.labels.password'}}</label>
      {{input
        id="password"
        name="password"
        type="password"
        placeholder=(t 'form.labels.password')
        value=password
      }}
    </div>

    <div class="pure-controls">
      <button
        type="submit"
        name="submit"
        class="pure-button pure-button-primary">{{t 'buttons.submit'}}</button>
      {{t 'or'}} {{link-to (t 'login.title') "login"}}
    </div>
  </form>
</div>
