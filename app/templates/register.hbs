<form
  class="register-form pure-form pure-form-aligned"
  {{action "register" on="submit"}}
>
  <div class="pure-control-group">
    <label for="name">Username</label>
    {{input
      id="name"
      name="name"
      type="text"
      placeholder="Username"
      value=name
    }}
  </div>

  <div class="pure-control-group">
    <label for="email">Email</label>
    {{input
      id="email"
      name="email"
      type="email"
      placeholder="Email"
      value=email
    }}
  </div>

  <div class="pure-control-group">
    <label for="password">Password</label>
    {{input
      id="password"
      name="password"
      type="password"
      placeholder="Password"
      value=password
    }}
  </div>

  <div class="pure-controls">
    <button
      type="submit"
      name="submit"
      class="pure-button pure-button-primary">Submit</button>
  </div>
</form>

<div class="">
  {{link-to "To login" "login"}}
</div>
